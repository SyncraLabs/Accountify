# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenAI API Key (Required for AI Coach feature)
OPENAI_API_KEY=your_openai_api_key_here

# Site URLs (Required for production)
NEXT_PUBLIC_SITE_URL=https://your-production-domain.com
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# Stripe (Required for subscriptions)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly
STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual
STRIPE_LEADER_MONTHLY_PRICE_ID=price_leader_monthly
STRIPE_LEADER_ANNUAL_PRICE_ID=price_leader_annual

# Supabase Service Role Key (Required for Stripe webhooks)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
